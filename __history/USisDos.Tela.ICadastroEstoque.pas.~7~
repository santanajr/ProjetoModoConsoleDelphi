unit USisDos.Tela.ICadastroEstoque;

interface

uses System.SysUtils,
      System.Generics.Collections,
      USisDos.Model.Produto,
      USisDos.Model.Estoque;

type

  TListaPesquisa = (TListaProduto, TListaEstoque);

  ICadastroEstoque = interface ['{D60E547B-95BB-471C-9617-1CCC61D32F4F}']
    function SetListaProduto(AListProduto :TList<TProduto>)                      : ICadastroEstoque;
    function GuardarListaEstoque(AListaEstoque: TList<TEstoque>)                 : ICadastroEstoque;
    function PesquisarProduto(ACodProduto : string; ATipoLista : TListaPesquisa) : ICadastroEstoque;
    function SetValorEstoque(AEstoque : Integer)                                 : ICadastroEstoque;
  end;

implementation

end.
